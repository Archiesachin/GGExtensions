{
  "manifest_version": 2,
  "name": "Article Summarizer",
  "version": "1.0",
  "description": "Summarizes articles on webpages",
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}