{
    "manifest_version": 3,
    "name": "Birthday Countdown",
    "version": "1.0",
    "description": "A Chrome extension to calculate remaining days until your birthday.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "icons/icon-500.png"
      }
    },
    "icons": {
        "128": "icons/icon-500.png"
      },
    "permissions": [
      "tabs"
    ]
  }
  