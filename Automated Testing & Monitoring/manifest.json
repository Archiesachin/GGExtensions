{
    "manifest_version": 3,
    "name": "Automated Testing and Monitoring",
    "version": "1.0",
    "description": "An extension to monitor CI pipelines, run automated tests, and scan for code quality and dependency vulnerabilities.",
    "background": {
      "service_worker": "background/background.js"
    },
    "action": {
      "default_popup": "popup/popup.html"
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "alarms"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  