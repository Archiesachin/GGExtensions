{
    "manifest_version": 3,
    "name": "Palindrome Checker",
    "version": "1.0",
    "description": "Check if a word, sentence, or number is a palindrome.",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "popup.css",
          "popup.js",
          "images/icon16.png",
          "images/icon48.png",
          "images/icon128.png"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  