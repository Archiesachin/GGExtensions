{
    "manifest_version": 3,
    "name": "ShrekVsWild",
    "version": "1.0",
    "description": "Shreck fights with the Monsters & Zombies",
    "permissions": [
        "storage"
    ],
    "optional-permissions" : ["tabs"],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
  
}