{
    "manifest_version": 3,
    "name": "Text to ASL Converter",
    "version": "1.0.0.0",
    "description": "A minimal Chrome extension that converts text to American Sign Language.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["activeTab"]
  }