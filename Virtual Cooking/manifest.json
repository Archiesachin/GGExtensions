
{
    "manifest_version": 3,
    "name": "Cooking Game Extension",
    "version": "1.0",
    "description": "allows players to follow detailed recipes to cook virtual dishes.",
    "permissions": [
        "storage"
    ],
    "optional-permissions" : ["tabs"],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
